@using EntityLayer.Concrete
@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>Kullanıcı Listesi</h5>

                </div>
                <div class="ibox-content" style="">

                    <div class="table-responsive">
                        <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                            <div class="html5buttons">
                                <div class="dt-buttons btn-group">
                                    <a class="btn btn-default buttons-excel buttons-html5" tabindex="0" aria-controls="DataTables_Table_0" href="/Admin/AdminRol/AddRole/"><span>Yeni Rol Ekle</span></a>
                              <a class="btn btn-default buttons-excel buttons-html5" tabindex="0" aria-controls="DataTables_Table_0" href="/Admin/AdminRol/UserRoleList/"><span>Kullanıcı Rol Listesi</span></a>
                                </div>
                            </div>

                            <div id="DataTables_Table_0_filter" class="dataTables_filter">
                                <label>
                                    Search:
                                    <input type="search" class="form-control form-control-sm" placeholder="" aria-controls="DataTables_Table_0">
                                </label>
                            </div>
                            <table class="table table-striped table-bordered table-hover dataTables-example dataTable" id="DataTables_Table_0" aria-describedby="DataTables_Table_0_info" role="grid">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending"
                                            aria-label="Rendering engine: activate to sort column descending" style="width: 80.762px;">Sıra</th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending"
                                            aria-label="Rendering engine: activate to sort column descending" style="width: 80.762px;">Başlık</th>
                                             <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending"
                                            aria-label="Rendering engine: activate to sort column descending" style="width: 80.762px;">Düzenle</th>
                                             <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending"
                                            aria-label="Rendering engine: activate to sort column descending" style="width: 80.762px;">Sil</th>
                                                                               
                                    </tr>
                                </thead>
                                @foreach (var item in Model)
                                {
                                    <tbody>
                                        <tr class="gradeA odd" role="row">
                                            <td class="center">@item.Id</td>
                                            <td class="center">@item.Name</td>
                                            <td><a href="/Admin/AdminRol/UpdateRol/@item.Id" class="btn btn-warning">Düzenle</a></td>
                                            <td>
                                                <a href="/Admin/AdminRol/DeleteRol/@item.Id" id="DeleteBtn"
                                               onclick="    return confirm('Silmek istediğinize emin misiniz ?');" class="btn btn-danger">Sil</a>
                                            </td>

                                        </tr>
                                    </tbody>
                                }


                            </table>
                            <br />
                          @*  @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new{page}))*@
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

