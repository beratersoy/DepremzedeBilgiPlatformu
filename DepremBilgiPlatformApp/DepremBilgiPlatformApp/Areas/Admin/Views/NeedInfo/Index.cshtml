@using EntityLayer.Concrete
@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.NeedInfo>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>İhtiyaç Bilgi Listesi</h5>

                </div>
                <div class="ibox-content" style="">

                    <div class="table-responsive">
                        <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper container-fluid dt-bootstrap4">
                            <div class="html5buttons">
                                <div class="dt-buttons btn-group">
                                    <a class="btn btn-default buttons-excel buttons-html5" tabindex="0" aria-controls="DataTables_Table_0" href="#"><span>Excel</span></a>
                                    <a class="btn btn-default buttons-pdf buttons-html5" tabindex="0" aria-controls="DataTables_Table_0" href="#"><span>PDF</span></a>
                                </div>
                            </div>

                            <div id="DataTables_Table_0_filter" class="dataTables_filter">
                                <label>
                                    Search:
                                    <input type="search" class="form-control form-control-sm" placeholder="" aria-controls="DataTables_Table_0">
                                </label>
                            </div>
                            <table class="table table-striped table-bordered table-hover dataTables-example dataTable" id="DataTables_Table_0" aria-describedby="DataTables_Table_0_info" role="grid">
                                <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending"
                                            aria-label="Rendering engine: activate to sort column descending" style="width: 80.762px;">İhtiyaç Numarası</th>
                                        <th class="sorting_asc" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-sort="ascending"
                                            aria-label="Rendering engine: activate to sort column descending" style="width: 80.762px;">Depremzede No</th>
                                        <th class="sorting"
                                            tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Browser: activate to sort column ascending"
                                            style="width: 116.812px;">Gıda</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1" colspan="1"
                                            aria-label="Platform(s): activate to sort column ascending" style="width: 116.812;">LCW Kart</th>
                                        <th class="sorting" tabindex="0"
                                            aria-controls="DataTables_Table_0" rowspan="1" colspan="1" aria-label="Engine version: activate to sort column ascending"
                                            style="width: 116.812px;">TC No</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1"
                                            colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 116.812px;">Yatak</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1"
                                            colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 116.812px;">Yorgan</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1"
                                            colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 116.812px;">Battaniye</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1"
                                            colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 116.812px;">Yastık</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1"
                                            colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 116.812px;">Yakıt</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1"
                                            colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 116.812px;">Nakit Yardım</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1"
                                            colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 116.812px;">Hijyen Paket</th>
                                        <th class="sorting" tabindex="0" aria-controls="DataTables_Table_0" rowspan="1"
                                            colspan="1" aria-label="CSS grade: activate to sort column ascending" style="width: 116.812px;">Açıklama</th>
                                    </tr>
                                </thead>
                                @foreach (var item in Model)
                                {
                                    <tbody>
                                        <tr class="gradeA odd" role="row">
                                            <td class="center">@item.NeedInfoId</td>
                                            <td class="center">@item.GuestId</td>
                                            <td class="center">@item.Food</td>
                                            <td class="center">@item.LcwCard</td>
                                            <td class="center">@item.Bed</td>
                                            <td class="center">@item.Duvet</td>
                                            <td class="center">@item.Blanket</td>
                                            <td class="center">@item.Pillow</td>
                                            <td class="center">@item.Fuel</td>
                                            <td class="center">@item.Cash</td>
                                            <td class="center">@item.Hygiene</td>
                                            <td class="center">@item.Description</td>
                                            <td><a href="/Admin/NeedInfo/UpdateNeedInfo/@item.NeedInfoId/" class="btn btn-warning">Düzenle</a></td>
                                            <td>
                                                <a href="/Admin/NeedInfo/DeleteNeedInfo/@item.NeedInfoId/" id="DeleteBtn"
                                               onclick="    return confirm('Silmek istediğinize emin misiniz ?');" class="btn btn-danger">Sil</a>
                                            </td>

                                        </tr>
                                    </tbody>
                                }


                            </table>
                            <br />
                            @Html.PagedListPager((IPagedList)Model, page => Url.Action("Index", new{page}))
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

